<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hygia.View.HospitalInfo"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             Title="HospitalInfo">
    <ContentPage>
        <ScrollView>
            <AbsoluteLayout>
                <StackLayout AbsoluteLayout.LayoutBounds="0.5,0."
                          AbsoluteLayout.LayoutFlags="XProportional,YProportional">
                    <Label x:Name="Titulo"
                   HorizontalOptions="Center"
                   FontSize="40"
                   ></Label>
                </StackLayout>

      
                    <Frame
                        AbsoluteLayout.LayoutBounds="0.,.55,0.3,0.15"
                        AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                        Margin="10"
                        Padding="10"
                        BackgroundColor="#81c784">
                        <Label x:Name="LblDistancia"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Center"></Label>
                    </Frame>

                    <Frame AbsoluteLayout.LayoutBounds="0.,1.,1.,.40"
                           AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                           Margin="10"
                           Padding="3"
                           BackgroundColor="#90caf9">
                        <maps:Map x:Name="MyMap"
                                 IsShowingUser="true"
                                 MapType="Hybrid"/>
                    </Frame>
                

            </AbsoluteLayout>
            
        
        </ScrollView>
  
    </ContentPage>
</CarouselPage>