<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hygia.View.HospitalInfo"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             Title="HospitalInfo">
    <ContentPage>
        <ScrollView>
            <AbsoluteLayout x:Name="Abs">
                <!--<StackLayout AbsoluteLayout.LayoutBounds="0.5,0."
                          AbsoluteLayout.LayoutFlags="XProportional,YProportional">
                    <Label x:Name="Titulo"
                   HorizontalOptions="Center"
                   FontSize="40"
                   ></Label>
                </StackLayout>-->
                <Frame AbsoluteLayout.LayoutBounds="0.,0.,1.,.40"
                           AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                           Margin="10"
                           Padding="3"
                           BackgroundColor="#c8e6c9">
                    <maps:Map x:Name="MyMap"
                                 IsShowingUser="true"
                                 MapType="Hybrid"/>
                </Frame>
                <Frame x:Name="frameDistancia"
                        AbsoluteLayout.LayoutBounds="0.,.50,0.5,0.20"
                        AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                        Margin="10"
                        Padding="10"
                        BackgroundColor="#b9f6ca">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="Distancia"
                               Font="Bold,20"></Label>
                        <AbsoluteLayout>
                            <ActivityIndicator  x:Name="ACCargandoDistancia" 
                                    AbsoluteLayout.LayoutBounds="0.5,.5,0.75,0.75"
                                    AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                                    Color="White" 
                                    IsRunning="true" 
                                    ></ActivityIndicator>
                            <Label x:Name="LblDistancia"
                               FontSize="Large"
                               AbsoluteLayout.LayoutBounds="0.5,.5"
                               AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                               VerticalOptions="Center"></Label>
                        </AbsoluteLayout>
                    </StackLayout>
                </Frame >

                <Frame  AbsoluteLayout.LayoutBounds="1.,.50,0.5,0.20"
                        AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                        BackgroundColor="#ffccbc"
                        Margin="10"
                        Padding="10">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="Tiempo ida"
                               Font="Bold,20"></Label>
                        <AbsoluteLayout>
                            <ActivityIndicator  x:Name="ACCargandoTiempo" 
                                    AbsoluteLayout.LayoutBounds="0.5,.5,0.75,0.75"
                                    AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                                    Color="White" 
                                    IsRunning="true">
                            </ActivityIndicator>
                            <Label x:Name="LblTiempo"
                               FontSize="Large"
                               AbsoluteLayout.LayoutBounds="0.5,.5"
                               AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                               VerticalOptions="Center"></Label>
                        </AbsoluteLayout>
                    </StackLayout>
                </Frame>
    
                <!--<Frame x:Name="frameDistancia"
                        AbsoluteLayout.LayoutBounds="1.,.50,0.4,0.20"
                        AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                        Margin="10"
                        Padding="10"
                        BackgroundColor="#ffccbc">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="Tiempo ida"
                               Font="Bold,20"></Label>
                        <AbsoluteLayout>
                            <ActivityIndicator  x:Name="ACCargandoTiempo" 
                                    AbsoluteLayout.LayoutBounds="0.5,.5,0.75,0.75"
                                    AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                                    Color="White" 
                                    IsRunning="true">
                            </ActivityIndicator>
                            <Label x:Name="LblTiempo"
                               FontSize="Large"
                               AbsoluteLayout.LayoutBounds="0.5,.5"
                               AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                               VerticalOptions="Center"></Label>
                        </AbsoluteLayout>
                    </StackLayout>
                </Frame>-->
            </AbsoluteLayout>
        </ScrollView>
    </ContentPage>
</CarouselPage>