<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HygiaCare"
             x:Class="HygiaCare.Views.MainPage"
             xmlns:ViewModel="clr-namespace:HygiaCare.ViewModel;assembly=HygiaCare">



  
  <ContentPage.BindingContext>
    <ViewModel:MainViewModel />
  </ContentPage.BindingContext>

  
 
  <ListView ItemsSource="{Binding HospitalesList}" 
            HasUnevenRows="True"
            HorizontalOptions="Fill">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>

          <StackLayout Orientation="Vertical"
                       Padding="50"
                       BackgroundColor="#eee">
            <StackLayout Orientation="Horizontal">
              <Image Source="logo_hospital_torrevieja.png" />
              <Label Text="{Binding Name}"
                     FontSize="24"/>
              <Label Text="{Binding ComunidadAutonoma}"
                     FontSize="15"
                   />
            </StackLayout>
          </StackLayout>
        </ViewCell>  
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>
